<style>
    .videos {
        position: relative;
        max-width: 700px;
        height: 392px;
        margin: 0 auto;
    }

        .videos video {
            max-width: 100%;
            height: 392px;
        }

        .videos video {
            max-width: 100%;
            height: 392px;
            width: 700px;
        }

    .menu {
        height: 98%;
        /* background-color: rgba(0, 0, 0, .5); */
    }

    .menu, .menu-wrapper {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -51%);
        width: 100%;
        padding: 0;
        text-align: center;
        align-items: center;
        justify-content: center;
    }

        .menu ul li {
            display: inline-block;
            margin-right: 30px;
        }

        .menu, .menu a {
            color: #fff;
        }

            .menu a:hover {
                cursor: pointer;
            }

    .play {
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        width: 100%;
        height: 100%;
        padding: 0;
        top: 0;
        /* background-color: rgba(0, 0, 0, .5); */
        background-image: url(http://mcdn3.raptmedia.com/public/system/projects/000/013/652/posters/original/9a15915c1a65e2534768b8b51d7065de6fcb58f8-Deloitte-Thumb.jpg);
        background-size: cover;
        background-position: center;
    }

    .hide {
        display: none;
    }

    li {
        font-size: 20px;
        font-weight: bolder;
        padding-left: 30px;
        border-radius: 10px;
        padding-right: 30px;
        padding-bottom: 50px;
        padding-top: 50px;
        cursor: pointer;
        width: 135px;
    }

        li:hover {
            background: rgba(180, 177, 177, .5);
        }

    h2 {
        height: 80px;
    }

    .hideDiv {
        height: 0px;
    }

    video::-webkit-media-controls-panel {
        opacity: 0;
    }

    @@media(max-width:768px) {
        .videos {
            height: 203px;
        }

            .videos video {
                height: 203px;
            }
    }
</style>
